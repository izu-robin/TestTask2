<UserControl x:Class="TestTask2.Views.RedactTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TestTask2.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="550" 
             d:DesignWidth="800"
             d:MinHeight="550"
             d:MinWidth="800"
             Background="#EBFADC"
             Style="{StaticResource Page_style}">

    <UserControl.DataContext>
        <vm:RedactTestVM />
    </UserControl.DataContext>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                Margin="30,40,30,20"
                Width="660">

                <TextBlock Text="Выберите тест:"
                   TextWrapping="Wrap"
                   Style="{StaticResource Text_style}"
                   FontSize="20" 
                   Width="185"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

                <ComboBox Height="25" 
                          ItemsSource="{Binding AllTests}"
                          SelectedItem="{Binding SelectedTest, Mode=TwoWay}"
                          DisplayMemberPath="title"
                          SelectedValuePath="id" 
                          Margin="20,0,10,0"
                          Width="280"/>

                <Button Style="{StaticResource  PushButton_style}" 
                        Command="{Binding RedactSelectedTestCommand}"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Width="145">

                    <TextBlock Text="Редактировать" 
                               Style="{StaticResource Text_style}"
                               VerticalAlignment="Center"
                               Height="20"
                               Margin="0"/>

                </Button>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">

            <StackPanel Orientation="Vertical"
                VerticalAlignment="Top"
                Margin="30,0"
                Width="660">

                <StackPanel Orientation="Horizontal">


                    <TextBlock Text="Текст вопроса: "
                               Style="{StaticResource Text_style}" 
                               HorizontalAlignment="Left"
                               Margin="0"
                               FontSize="20"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Style="{StaticResource Text_style}" 
                               Margin="70,0,0,0"
                               FontSize="20"
                               Foreground="Crimson"/>

                </StackPanel>
                
                <TextBox Text="{Binding CurrentQuestion.questionText}"
                         IsEnabled="{Binding RedactingInProgress}"
                         Margin="0,10,0,15"
                         Height="70"
                         Width="660"
                         FontSize="18"/>

                <TextBlock Text="Варианты ответа, правильные отмечены (один или несколько): "
                   Style="{StaticResource Text_style}" 
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Width="660"
                   Margin="0,0,0,10"
                   FontSize="20"/>

                <CheckBox Name="ch1" 
                          IsChecked="{Binding CurrentQuestion.ChBStatus[1], Mode=TwoWay}"
                          IsEnabled="{Binding RedactingInProgress}"
                          Width="660"
                          VerticalContentAlignment="Center">

                    <TextBox  Text="{Binding CurrentQuestion.answer1}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch2" 
                          IsChecked="{Binding CurrentQuestion.ChBStatus[2], Mode=TwoWay}"
                          IsEnabled="{Binding RedactingInProgress}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding CurrentQuestion.answer2}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch3" 
                          IsChecked="{Binding CurrentQuestion.ChBStatus[3], Mode=TwoWay}"
                          IsEnabled="{Binding RedactingInProgress}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding CurrentQuestion.answer3}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch4" 
                          IsChecked="{Binding CurrentQuestion.ChBStatus[4], Mode=TwoWay}"
                          IsEnabled="{Binding RedactingInProgress}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding CurrentQuestion.answer4}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <Grid Width="660"
                      Height="80"
                      Margin="0,30">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <Grid Grid.Column="0"
                          Grid.Row="0">

                        <Button Style="{StaticResource PushButton_style}"
                                Command="{Binding ShowPreviousQuestionCommand}"
                                Width="180"
                                HorizontalAlignment="Left">

                            <TextBlock Text="Предыдущий"
                                       Style="{StaticResource Text_style}"
                                       Margin="0"/>

                        </Button>
                    </Grid>

                    <Grid Grid.Column="1"
                          Grid.Row="0">

                        <TextBlock Text="{Binding RedactedTest.CurrentQuestionIndex}" 
                                   Style="{StaticResource Text_style}"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                    </Grid>

                    <Grid Grid.Column="2"
                          Grid.Row="0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0,5">
                        
                        <Button Style="{StaticResource PushButton_style}"
                                Command="{Binding ShowNextQuestionCommand}"
                                Width="180"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">

                            <TextBlock Text="Следующий"
                                       Style="{StaticResource Text_style}"
                                       Margin="0"/>

                        </Button>
                    </Grid>

                    <Grid Grid.Column="1"
                          Grid.Row="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center">

                        <TextBlock Text="{Binding StatusMessage}" 
                                   Style="{StaticResource Text_style}"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>


                    </Grid>

                    <Grid Grid.Column="2"
                          Grid.Row="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center">

                        <Button Style="{StaticResource PushButton_style}"
                                Command="{Binding SaveChangedTestCommand}"
                                Width="180">

                            <TextBlock Text="Сохранить тест"
                                       Style="{StaticResource Text_style}"
                                       Margin="0"/>

                        </Button>

                    </Grid>

                </Grid>

            </StackPanel>

        </Grid>  

    </Grid>
    
</UserControl>
