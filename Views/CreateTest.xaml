<UserControl x:Class="TestTask2.Views.CreateTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TestTask2.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="560" 
             d:DesignWidth="800"
             d:MinHeight="560"
             d:MinWidth="800"
             Background="#EBFADC"
             Style="{StaticResource Page_style}" >

    <UserControl.DataContext>
        <vm:CreateTestVM />
    </UserControl.DataContext>

    <Grid Margin="20,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
 
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Margin="30,20,30,20"
                        Width="660"
                        >

                <TextBlock Text="Введите название теста:"
                           TextWrapping="Wrap"
                           Style="{StaticResource Text_style}"
                           FontSize="20" 
                           Width="185"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <TextBox Height="25" 
                          Margin="20,0,10,0"
                          Width="280"/>

                <Button Style="{StaticResource  PushButton_style}" 
                             VerticalAlignment="Center"
                             Margin="20,0,0,0"
                             Width="145">

                    <TextBlock Text="Создать тест" 
                               Style="{StaticResource Text_style}"
                               VerticalAlignment="Center"
                               Height="20"
                               Margin="0"/>

                </Button>

            </StackPanel>


        </Grid>


        <Grid Grid.Row="1">

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Top"
                        Margin="30,0"
                        Width="660">



                <TextBlock Text="Введите вопрос: "
                           Style="{StaticResource Text_style}" 
                           HorizontalAlignment="Left"
                           Margin="0"
                           FontSize="20"/>

                <TextBox Text="Вопрос..."
                         Margin="0,10,0,15"
                         Height="70"
                         Width="660"
                         FontSize="18"/>





                <TextBlock Text="Введите  варианты ответа и отметьте правильные (один или несколько): "
                           Style="{StaticResource Text_style}" 
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Width="660"
                           Margin="0,0,0,10"
                           FontSize="20"/>


                <CheckBox Name="ch1" 
                          Width="660"
                          VerticalContentAlignment="Center">

                    <TextBox  Text="первый вариант"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch2" 
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="второй вариант"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch3" 
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="третий вариант"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch4" 
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="четвертый вариант"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>



                <Grid Width="660"
                          Margin="0,30">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Grid Grid.Column="0">


                            <Button Style="{StaticResource PushButton_style}"
                            Width="180"
                            HorizontalAlignment="Left">

                                <TextBlock Text="Предыдущий"
                                   Style="{StaticResource Text_style}"
                                   Margin="0"/>

                            </Button>
                        </Grid>

                        <Grid Grid.Column="1"
                              HorizontalAlignment="Right">
                            <Button Style="{StaticResource PushButton_style}"
                            Width="180"
                            HorizontalAlignment="Right">

                                <TextBlock Text="Следующий"
                                   Style="{StaticResource Text_style}"
                                   Margin="0"/>

                            </Button>
                        </Grid>


                    </Grid>

                </StackPanel>

          


        </Grid>







    </Grid>

</UserControl>
