<UserControl x:Class="TestTask2.Views.CreateTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TestTask2.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="560" 
             d:DesignWidth="800"
             d:MinHeight="560"
             d:MinWidth="800"
             Background="#EBFADC"
             Style="{StaticResource Page_style}" >

    <UserControl.DataContext>
        <vm:CreateTestVM />
    </UserControl.DataContext>

    <Grid Margin="20,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
 
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Margin="30,0,30,20"
                        Width="660"
                        >

                <TextBlock Text="Введите название теста:"
                           TextWrapping="Wrap"
                           Style="{StaticResource Text_style}"
                           FontSize="20" 
                           Width="185"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <TextBox  Text="{Binding NewTest.title, Mode=TwoWay}"
                          Height="25"
                          Margin="20,0,10,0"
                          Width="280"/>

                <Button Style="{StaticResource  PushButton_style}" 
                        Command="{Binding CreateNewTestCommand}"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Width="145">

                    <TextBlock Text="{Binding CreateSaveButton}" 
                               Style="{StaticResource Text_style}"
                               VerticalAlignment="Center"
                               Height="20"
                               Margin="0"/>

                </Button>

            </StackPanel>


        </Grid>


        <Grid Grid.Row="1">

            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Top"
                        Margin="30,0"
                        Width="660">


                <StackPanel Orientation="Horizontal">


                    <TextBlock Text="Введите вопрос: "
                           Style="{StaticResource Text_style}" 
                           HorizontalAlignment="Left"
                           Margin="0"
                           FontSize="20"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               
                               Style="{StaticResource Text_style}" 
                               Margin="70,0,0,0"
                               FontSize="20"
                               Foreground="Crimson"/>

                </StackPanel>

                <TextBox Text="{Binding NewQuestion.questionText, Mode=TwoWay}"
                         IsEnabled="{Binding CreatingInProgress}"
                         TextWrapping="Wrap"
                         Margin="0,10,0,15"
                         Height="70"
                         Width="660"
                         FontSize="18"/>





                <TextBlock Text="Введите  варианты ответа и отметьте правильные (один или несколько): "
                           Style="{StaticResource Text_style}" 
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Width="660"
                           Margin="0,0,0,10"
                           FontSize="20"/>


                <CheckBox Name="ch1" 
                          IsEnabled="{Binding CreatingInProgress, Mode=TwoWay}"
                          IsChecked="{Binding NewQuestion.ChBStatus[1], Mode=TwoWay}"
                          Width="660"
                          VerticalContentAlignment="Center">

                    <TextBox  Text="{Binding NewQuestion.answer1, Mode=TwoWay}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch2" 
                          IsEnabled="{Binding CreatingInProgress, Mode=TwoWay}"
                          IsChecked="{Binding NewQuestion.ChBStatus[2], Mode=TwoWay}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding NewQuestion.answer2, Mode=TwoWay}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch3" 
                          IsEnabled="{Binding CreatingInProgress, Mode=TwoWay}"
                          IsChecked="{Binding NewQuestion.ChBStatus[3], Mode=TwoWay}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding NewQuestion.answer3, Mode=TwoWay}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>

                <CheckBox Name="ch4"
                          IsEnabled="{Binding CreatingInProgress, Mode=TwoWay}"
                          IsChecked="{Binding NewQuestion.ChBStatus[4], Mode=TwoWay}"
                          Width="660"
                          VerticalContentAlignment="Center"
                          Margin="0,15,0,0">

                    <TextBox  Text="{Binding NewQuestion.answer4, Mode=TwoWay}"
                              Width="640"
                              Height="25"
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Center" 
                              FontSize="18"/>

                </CheckBox>



                <Grid Width="660"
                      Height="80"
                      Margin="0,20">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                        <Grid Grid.Column="0"
                              Grid.Row="0">

                            <Button Style="{StaticResource PushButton_style}"
                                    Command="{Binding PreviuousQuestionCommand}"
                                    Width="180"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">


                                <TextBlock Text="Предыдущий"
                                   Style="{StaticResource Text_style}"
                                   Margin="0"/>

                            </Button>



                        </Grid>

                        <Grid Grid.Column="1"
                              Grid.Row="0">

                            <TextBlock Text="{Binding NewTest.CurrentQuestion}" 
                                       Style="{StaticResource Text_style}"
                                       Margin="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                        </Grid>

                        <Grid Grid.Column="2"
                              Grid.Row="0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top">


                            <Button Style="{StaticResource PushButton_style}"
                                    Command="{Binding NextQuestionCommand}"
                                    Width="180"
                                    HorizontalAlignment="Right">

                                <TextBlock Text="Сохранить вопрос"
                                   Style="{StaticResource Text_style}"
                                   Margin="0"/>

                            </Button>

                        </Grid>

                    <Grid Grid.Column="2"
                          Grid.Row="1"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Right">

                        <Button Style="{StaticResource PushButton_style}"
                                Command="{Binding SaveNewTestCommand}"
                                Width="180"
                                HorizontalAlignment="Right">

                            <TextBlock Text="Сохранить тест"
                               Style="{StaticResource Text_style}"
                               Margin="0"/>

                        </Button>

                    </Grid>

                    <Grid Grid.Row="1"
                          Grid.Column="1"
                          >

                        <TextBlock Text="{Binding SavingStatus}"
                                   Style="{StaticResource Text_style}"
                                   Margin="0"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>
                        
                    </Grid>

                    

                </Grid>

            </StackPanel>




        </Grid>







    </Grid>

</UserControl>
